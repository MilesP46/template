#!/usr/bin/env bash
# advisory pre-commit hook: warns on trailing whitespace & missing EOF newline.
# does NOT block commit; always exits 0.

echo "üîç Running lightweight checks (no external dependencies)..."

warned=0
FILES=$(git diff --cached --name-only --diff-filter=ACM)

check_file() {
  local file="$1"
  if [[ -f "$file" ]]; then
    if grep -Iq . "$file"; then
      # trailing whitespace
      if grep -n -E '\s+$' "$file" >/dev/null; then
        echo "‚ö†Ô∏è  Trailing whitespace in $file"
        warned=1
      fi
      # missing newline at EOF
      if [ -n "$(tail -c1 "$file")" ]; then
        echo "‚ö†Ô∏è  No newline at end of $file"
        warned=1
      fi
    fi
  fi
}

for f in $FILES; do
  check_file "$f"
done

if [[ $warned -eq 1 ]]; then
  echo "‚ö†Ô∏è  Pre-commit warnings shown above (commit not blocked)."
else
  echo "‚úÖ No issues detected by advisory pre-commit hook."
fi
exit 0
